{
    "plugins": ["node"],
    "extends": ["airbnb"],
    "env": {
      "es6": true,
      "mocha": true
    },
    "parserOptions": {"ecmaVersion": 2018},
    "rules": {
      "node/exports-style": ["error", "module.exports"],
      "no-await-in-loop": 0,
      "no-unused-expressions": ["error", { "allowShortCircuit": true }]
    }
  }